@model CatalogModel
@addTagHelper *, cloudscribe.Web.Pagination

@foreach (var p in Model.Products)
{

    <div class="col-sm-3">

        <div class="card " style="width: 15rem;">

            <img src="@p.ImageUrl" class="card-img-top image" alt="image" crossorigin="anonymous">


            <div class="card-body">
                <h5 class="card-title">@p.Name</h5>
                <p class="card-text">£@p.Price</p>

                <a href="Products/Details?id=@p.Id" class="btn btn-primary">Details</a>

                @if (User.IsInRole("Admin"))
                {
                    <a href="Products/Delete?id=@p.Id" class="btn btn-danger" onclick="return window.confirm('Are you sure you want to Delete this item?')">Delete</a>
                    <a href="Products/Hide?id=@p.Id" class="btn btn-danger" onclick="return window.confirm('Are you sure you want to Hide this item?')">Hide</a>
                }

            </div>
        </div>
    </div>
}
<div class="col-sm-10">
    <cs-pager cs-paging-pagenumber="10"
              cs-paging-totalitems="11"
              cs-paging-pagesize="10"
              cs-pagenumber-param="pageNumber"
              asp-controller="Products"
              asp-action="Index"
              cs-pager-li-current-class="page-item active"
              cs-pager-li-other-class="page-item"
              cs-pager-li-non-active-class="page-item disabled"
              cs-pager-link-current-class="page-link"
              cs-pager-link-other-class="page-link">

    </cs-pager>
</div>